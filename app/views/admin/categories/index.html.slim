h1
  = t(".title")
.buttons_panel
  = link_to t("admin.categories.new.title"), new_admin_category_path, class: "btn btn-outline-primary btn-sm"
section#categories
  table.table
    thead
      tr
        th
          = t(".table.th1")
        th
          = t(".table.th2")
        th
          = t(".table.th3")
        th
          = t(".table.th4")
    tbody
      - @categories.each_with_index do |category, index |
        tr
          td
            = index + 1
          td
            = category.name
          td
            = category.parent.name if category.parent.present?
          td
            = link_to t("common.change"), edit_admin_category_path(category), class: "btn btn-outline-primary btn-sm"
            = link_to t("common.delete"), admin_category_path(category), method: :delete, data: { confirm: t("categories.form.confirm")}, class: "btn btn-outline-danger btn-sm"