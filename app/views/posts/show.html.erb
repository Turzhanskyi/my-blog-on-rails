<article class='post'>
  <section class='post-head'>
    <h1><%= @post.title %></h1>
    <small>
      <time><%= @post.created_at.to_date.strftime('%d %B, %Y') %></time>
      |
      <%= link_to t('common.change'), edit_post_path(@post) %>
      |
      <%= link_to t('common.delete'), post_path(@post), method: :delete, data: { confirm: t('posts.form.confirm') } %>
    </small>
  </section>
  <section class='post-summary'>
    <%= @post.body %>
  </section>
</article>
