<%= form_for @post, html: { multipart: true } do |f| %>
  <%= render 'error' %>

  <div class='form-group'>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :summary %>
    <%= f.text_area :summary, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :body %>
    <%= f.trix_editor :body, class: 'editor' %>
  </div>

  <div class='form-group'>
    <%= f.label :all_tags %>
    <%= f.text_field :all_tags, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.file_field :image %>
  </div>

  <div class='form-group'>
    <%= f.submit t('.submit', action: @post.new_record? ? t('common.create') : t('common.change')), class: 'btn btn-primary' %>
    <%= link_to t('common.back'), :back, class: 'btn btn-outline-secondary' %>
  </div>
<% end %>